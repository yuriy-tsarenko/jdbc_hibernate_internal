<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/cbs</property>
        <property name="hibernate.connection.username">postgres</property>
        <property name="hibernate.connection.password">root</property>
        <property name="show_sql">true</property>
        <property name="hibernate.format_sql">true</property>
        <property name="hibernate.use_sql_comments">true</property>
        <property name="hibernate.cache.region.factory_class">ehcache</property>
        <property name="hibernate.cache.use_query_cache">false</property>

        <mapping class="com.cbs.edu.hibernate.mapping.Employee"/>
        <mapping class="com.cbs.edu.hibernate.mapping.Department"/>
        <mapping class="com.cbs.edu.hibernate.mapping.EmployeeDetails"/>
        <mapping class="com.cbs.edu.hibernate.mapping.Project"/>
    </session-factory>
</hibernate-configuration>
